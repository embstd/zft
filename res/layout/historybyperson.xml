<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#efefef"
>

<ScrollView 
android:layout_height="wrap_content" 
android:layout_width="wrap_content" 
>

<RelativeLayout 
android:layout_height="wrap_content" 
android:layout_width="wrap_content" 
>

	
<ImageView
android:id="@+id/title"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@drawable/title"
></ImageView>


<TextView
android:id="@+id/history_tv_title"
android:text="案件详细信息"
android:textSize="28px"
android:textColor="#FEFEFE"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginTop="6px"
android:layout_centerHorizontal="true"
android:gravity="center"
></TextView>


<TextView
android:id="@+id/ncp_tvAnyou"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="案         由:"
android:layout_below="@+id/title"
android:layout_marginTop="15px"
android:textColor="#595959"
></TextView>

<EditText
android:id="@+id/ncp_etAnyou"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text=""
android:textSize="18sp"
android:layout_marginTop="5px"
android:layout_toRightOf="@+id/ncp_tvAnyou"
android:layout_below="@+id/title"
android:editable="false"
android:cursorVisible="false"
></EditText>



<TextView
android:id="@+id/ncp_tvName"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="姓          名:"
android:layout_below="@+id/ncp_etAnyou"
android:layout_marginTop="15px"
android:textColor="#595959"
></TextView>

<EditText
android:id="@+id/ncp_etName"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text=""
android:textSize="18sp"
android:layout_marginTop="5px"
android:layout_toRightOf="@+id/ncp_tvName"
android:layout_below="@+id/ncp_etAnyou"
android:editable="false"
android:cursorVisible="false"
></EditText>

<TextView
android:id="@+id/ncp_tvSex"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="性          别:"
android:layout_below="@+id/ncp_etName"
android:layout_marginTop="15px"
android:textColor="#595959"
></TextView>

<EditText
android:id="@+id/ncp_etSex"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textSize="18sp"
android:layout_marginTop="5px"
android:layout_toRightOf="@+id/ncp_tvName"
android:layout_below="@+id/ncp_etName"
android:numeric="integer"
android:editable="false"
android:cursorVisible="false"
></EditText>


<TextView
android:id="@+id/ncp_tvAge"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="年          龄:"
android:layout_below="@+id/ncp_etSex"
android:layout_marginTop="15px"
android:textColor="#595959"
></TextView>

<EditText
android:id="@+id/ncp_etAge"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textSize="18sp"
android:layout_marginTop="5px"
android:layout_toRightOf="@+id/ncp_tvName"
android:layout_below="@+id/ncp_etSex"
android:numeric="integer"
android:editable="false"
android:cursorVisible="false"
></EditText>

<TextView
android:id="@+id/ncp_tvTell"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="电          话:"
android:layout_below="@+id/ncp_etAge"
android:layout_marginTop="15px"
android:textColor="#595959"
></TextView>

<EditText
android:id="@+id/ncp_etTell"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textSize="18sp"
android:layout_marginTop="5px"
android:layout_toRightOf="@+id/ncp_tvName"
android:layout_below="@+id/ncp_etAge"
android:numeric="integer"
android:editable="false"
android:cursorVisible="false"
></EditText>

<TextView
android:id="@+id/ncp_tvAddress"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="地         址:"
android:layout_below="@+id/ncp_etTell"
android:layout_marginTop="15px"
android:textColor="#595959"
></TextView>

<EditText
android:id="@+id/ncp_etAddress"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textSize="18sp"
android:layout_marginTop="5px"
android:layout_toRightOf="@+id/ncp_tvName"
android:layout_below="@+id/ncp_etTell"
android:editable="false"
android:cursorVisible="false"
></EditText>

<TextView
android:id="@+id/ncp_tvIDnumber"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="身   份  证:"
android:layout_below="@+id/ncp_etAddress"
android:layout_marginTop="15px"
android:textColor="#595959"
android:numeric="integer"
></TextView>

<EditText
android:id="@+id/ncp_etIDnumber"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textSize="18sp"
android:layout_marginTop="5px"
android:layout_toRightOf="@+id/ncp_tvName"
android:layout_below="@+id/ncp_etAddress"
android:numeric="integer"
android:editable="false"
android:cursorVisible="false"
></EditText>    


<TextView
android:id="@+id/ncp_tvOpenAdd"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="案发地点:"
android:layout_below="@+id/ncp_etIDnumber"
android:layout_marginTop="15px"
android:textColor="#595959"
></TextView>

<EditText
android:id="@+id/ncp_etOpenAdd"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textSize="18sp"
android:layout_marginTop="5px"
android:layout_toRightOf="@+id/ncp_tvName"
android:layout_below="@+id/ncp_etIDnumber"
android:editable="false"
android:cursorVisible="false"
></EditText>   


<TextView
android:id="@+id/ncp_tvOpenTime"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="案发时间:"
android:layout_below="@+id/ncp_etOpenAdd"
android:layout_marginTop="15px"
android:textColor="#595959"
></TextView>

<EditText
android:id="@+id/ncp_etOpenTime"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textSize="18sp"
android:layout_marginTop="5px"
android:layout_toRightOf="@+id/ncp_tvName"
android:layout_below="@+id/ncp_etOpenAdd"
android:editable="false"
android:cursorVisible="false"
></EditText> 





<TextView
android:id="@+id/ncp_tvintro"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="简单描述:"
android:layout_below="@+id/ncp_etOpenTime"
android:layout_marginTop="15px"
android:textColor="#595959"
></TextView>

<EditText
android:id="@+id/ncp_etintro"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textSize="18sp"
android:layout_marginTop="5px"
android:layout_toRightOf="@+id/ncp_tvName"
android:layout_below="@+id/ncp_etOpenTime"
android:editable="false"
android:cursorVisible="false"
></EditText> 

<Button
android:id="@+id/ncp_btnPic"
android:text="照  片  查  看"
android:layout_width="wrap_content" 
 android:layout_height="wrap_content" 
android:layout_below="@+id/ncp_etintro"
android:layout_marginLeft="40px"
android:textColor="#000"
android:visibility="invisible"
/>


<CheckBox
android:id="@+id/ncp_cbXY"
android:text="坐标选择"
android:layout_width="wrap_content" 
 android:layout_height="wrap_content" 
android:layout_below="@+id/ncp_etintro"
android:layout_toRightOf="@+id/ncp_btnPic"
android:layout_marginLeft="40px"
android:textColor="#000"
android:enabled="false"
android:visibility="gone"
>
</CheckBox>

<Button
android:id="@+id/ncp_btnBack"
android:text="返回"
android:layout_width="100dip" 
 android:layout_height="wrap_content" 
android:layout_below="@+id/ncp_etintro"
android:layout_toRightOf="@+id/ncp_btnPic"
android:layout_marginLeft="40px"
android:textColor="#000"

/>


</RelativeLayout>

</ScrollView>

</RelativeLayout>
