<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"	
android:orientation="vertical" 
android:layout_width="fill_parent"	
android:layout_height="fill_parent" 
android:id="@+id/layout">	

<FrameLayout 
android:id="@+id/preview"		
android:layout_weight="1" 
android:layout_width="fill_parent"		
android:layout_height="fill_parent"
></FrameLayout>	

<ImageView
android:id="@+id/camera_ImageView1"
android:text="取消"
android:textSize="25px"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textStyle="bold"
android:background="@drawable/camera_up2"
android:layout_centerVertical="true"
android:layout_alignParentRight="true"
android:gravity="center"
android:layout_marginRight="6px"
></ImageView>

<ImageView
android:id="@+id/camera_ImageView2"
android:text="拍摄"
android:textSize="25px"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textStyle="bold"
android:background="@drawable/camera_up2"
android:layout_alignParentBottom="true"
android:layout_alignParentRight="true"
android:layout_marginBottom="5px"
android:layout_marginRight="6px"
android:gravity="center"
></ImageView>

<ImageView
android:id="@+id/camera_ImageView3"
android:text="闪光\n自动"
android:textSize="25px"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textStyle="bold"
android:background="@drawable/camera_up2"
android:layout_alignParentBottom="true"
android:layout_alignParentLeft="true"
android:layout_marginBottom="5px"
android:gravity="center"
android:layout_marginLeft="6px"
android:layout_marginRight="6px"
></ImageView>

<ImageView
android:id="@+id/camera_ImageView4"
android:text="分辨率\n640×480"
android:textSize="19px"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textStyle="bold"
android:background="@drawable/camera_up2"
android:layout_alignParentTop="true"
android:layout_alignParentLeft="true"
android:layout_marginBottom="5px"
android:layout_toRightOf="@+id/camera_ImageView3"
android:gravity="center"
android:layout_marginLeft="6px"
android:layout_marginTop="6px"
></ImageView>

<ImageView
android:id="@+id/camera_ImageView5"
android:text="完成"
android:textSize="25px"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textStyle="bold"
android:background="@drawable/camera_up2"
android:layout_alignParentTop="true"
android:layout_alignParentRight="true"
android:gravity="center"
android:layout_marginRight="6px"
android:layout_marginTop="6px"
></ImageView>

</RelativeLayout>
