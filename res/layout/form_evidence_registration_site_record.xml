<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#efefef" >

    <ScrollView
        android:id="@+id/sv004"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView
                android:id="@+id/form_title_all_4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/form_title_all_name"
                android:textColor="#111111"
                android:textSize="18sp" 
                android:paddingTop="20dp"/>

            <TextView
                android:id="@+id/form_title_4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/form_title_all_4"
                android:gravity="center_horizontal"
                android:text="@string/form_title_15_name"
                android:textColor="#111111"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/evidence_registration_site_record_1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/form_title_4"
                android:gravity="center_vertical"
                android:text="@string/form_evidence_registration_site_record_1_name"
                android:textColor="#111111" />

            <EditText
                android:id="@+id/evidence_registration_site_record_1_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/form_title_4"
                android:layout_toRightOf="@id/evidence_registration_site_record_1_name"
                android:textSize="15sp" 
                android:singleLine="true"/>

            <TextView
                android:id="@+id/evidence_registration_site_record_2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/evidence_registration_site_record_1_txt"
                android:gravity="center_vertical"
                android:text="@string/form_evidence_registration_site_record_2_name"
                android:textColor="#111111" />

            <EditText
                android:id="@+id/evidence_registration_site_record_2_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/evidence_registration_site_record_1_txt"
                android:layout_toRightOf="@id/evidence_registration_site_record_2_name"
                android:textSize="15sp" 
                android:singleLine="true"/>

            <TextView
                android:id="@+id/evidence_registration_site_record_3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/evidence_registration_site_record_2_txt"
                android:gravity="center_vertical"
                android:text="@string/form_evidence_registration_site_record_3_name"
                android:textColor="#111111" />

            <EditText
                android:id="@+id/evidence_registration_site_record_3_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/evidence_registration_site_record_2_txt"
                android:layout_toRightOf="@id/evidence_registration_site_record_3_name"
                android:textSize="15sp" 
                android:singleLine="true"/>

            <TextView
                android:id="@+id/evidence_registration_site_record_4_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/evidence_registration_site_record_3_txt"
                android:gravity="center_vertical"
                android:text="@string/form_evidence_registration_site_record_4_name"
                android:textColor="#111111" />

            <EditText
                android:id="@+id/evidence_registration_site_record_4_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/evidence_registration_site_record_3_txt"
                android:layout_toRightOf="@id/evidence_registration_site_record_4_name"
                android:textSize="15sp" 
                android:singleLine="true"/>

            <TextView
                android:id="@+id/evidence_registration_site_record_5_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/evidence_registration_site_record_4_txt"
                android:gravity="center_vertical"
                android:text="@string/form_evidence_registration_site_record_5_name"
                android:textColor="#111111" />

            <EditText
                android:id="@+id/evidence_registration_site_record_5_txt"
                android:layout_width="fill_parent"
                android:layout_height="200dip"
                android:layout_alignParentRight="true"
                android:layout_below="@id/evidence_registration_site_record_5_name"
                android:textSize="15sp" 
                android:singleLine="true"/>
            <Button
                android:id="@+id/pickdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/evidence_registration_site_record_5_name"
                android:layout_toRightOf="@+id/evidence_registration_site_record_6_txt"
                android:text="选择日期" 
                android:textSize="15sp" 
                android:visibility="gone"/>


            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_below="@id/evidence_registration_site_record_5_txt">
                
            </RelativeLayout>
        </RelativeLayout>
        
         </ScrollView>

    <include android:id="@+id/form_bottom"
        layout="@layout/form_bottom_bar"
        android:layout_alignParentBottom="true"
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
   

</RelativeLayout>