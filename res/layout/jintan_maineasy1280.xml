<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
    android:background="@drawable/easybg">


<ImageView
android:id="@+id/title"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@drawable/easytitle"
></ImageView>


<TextView
android:id="@+id/title_tv"
android:text="执法通"
android:textSize="55px"
android:textColor="#FEFEFE"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginTop="8px"
android:layout_centerHorizontal="true"
android:gravity="center"
></TextView>


<TextView
android:id="@+id/main_welcome_name"

android:textSize="40px"
android:textColor="#000000"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginTop="15px"
android:layout_centerHorizontal="true"
android:layout_marginLeft="70px"
android:layout_below="@+id/title"
></TextView>



<ImageView
android:id="@+id/product"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginTop="10px"
android:background="@drawable/easyproduct"
android:layout_below="@+id/main_welcome_name"
></ImageView>


<ImageView
android:id="@+id/itemnewcase"
android:layout_width="110px"
android:layout_height="110px"
android:layout_marginTop="90px"
android:background="@drawable/easynewcase"
android:layout_below="@+id/main_welcome_name"
android:layout_marginLeft="100px"
></ImageView>

<TextView
android:id="@+id/item_tv1" 
android:text="违章查处"
android:textSize="28px"
android:textColor="#000000"
android:layout_height="wrap_content" 
android:layout_width="wrap_content" 
android:layout_below="@+id/itemnewcase"
android:layout_marginLeft="102px"
></TextView>




<ImageView
android:id="@+id/itemmycase"
android:layout_width="110px"
android:layout_height="110px"
android:layout_marginTop="90px"
android:background="@drawable/easymycase"
android:layout_below="@+id/main_welcome_name"
android:layout_marginLeft="128px"
android:layout_toRightOf="@+id/itemnewcase"
></ImageView>

<TextView
android:id="@+id/item_tv2" 
android:text="案件办理"
android:textSize="28px"
android:textColor="#000000"
android:layout_height="wrap_content" 
android:layout_width="wrap_content" 
android:layout_below="@+id/itemmycase"
android:layout_marginLeft="124px"
android:layout_toRightOf="@+id/itemnewcase"
></TextView>





<ImageView
android:id="@+id/itemhistory"
android:layout_width="110px"
android:layout_height="110px"
android:layout_marginTop="90px"
android:background="@drawable/easyhistory"
android:layout_below="@+id/main_welcome_name"
android:layout_marginLeft="128px"
android:layout_toRightOf="@+id/itemmycase"
android:visibility="invisible"
></ImageView>

<TextView
android:id="@+id/item_tv3" 
android:text="历史记录"
android:textSize="28px"
android:textColor="#000000"
android:layout_height="wrap_content" 
android:layout_width="wrap_content" 
android:layout_below="@+id/itemmycase"
android:layout_marginLeft="124px"
android:layout_toRightOf="@+id/itemmycase"
android:visibility="invisible"
></TextView>



<ImageView
android:id="@+id/group"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginTop="30px"
android:background="@drawable/easygroup"
android:layout_below="@+id/product"
></ImageView>



<ImageView
android:id="@+id/itemfastphoto"
android:layout_width="50px"
android:layout_height="50px"
android:layout_marginTop="65px"
android:layout_marginLeft="50px"
android:background="@drawable/easyfastcase"
android:layout_below="@+id/product"
></ImageView>

<TextView
android:id="@+id/itemfastphototv" 
android:text="快速取证"
android:textSize="28px"
android:textColor="#57585a"
android:layout_height="wrap_content" 
android:layout_width="wrap_content" 
android:layout_below="@+id/product"
android:layout_marginLeft="40px"
android:layout_marginTop="70px"
android:layout_toRightOf="@+id/itemfastphoto"
></TextView>

<ImageView
android:id="@+id/itemsystemset"
android:layout_width="50px"
android:layout_height="50px"
android:layout_marginTop="43px"
android:layout_marginLeft="50px"
android:background="@drawable/easysystemset"
android:layout_below="@+id/itemfastphoto"
></ImageView>

<TextView
android:id="@+id/itemsystemsettv" 
android:text="系统设置"
android:textSize="28px"
android:textColor="#57585a"
android:layout_height="wrap_content" 
android:layout_width="wrap_content" 
android:layout_below="@+id/itemfastphototv"
android:layout_marginLeft="40px"
android:layout_marginTop="55px"
android:layout_toRightOf="@+id/itemsystemset"
></TextView>


<TextView
android:id="@+id/main_cg_name" 
android:textSize="28px"
android:textColor="#57585a"
android:layout_height="wrap_content" 
android:layout_width="wrap_content" 
android:layout_below="@+id/group"
android:gravity="bottom"
android:layout_alignParentBottom="true"
android:layout_marginLeft="220px"

></TextView>

</RelativeLayout>
