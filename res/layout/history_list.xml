<RelativeLayout 
android:id="@+id/RelativeLayout01" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent" 
xmlns:android="http://schemas.android.com/apk/res/android"
android:background="#fafafa">

<TextView 
android:id="@+id/history_list_xu" 
android:layout_width="24px" 
android:layout_height="fill_parent"
android:layout_marginTop="5px"
android:gravity="center"
android:textStyle="bold"
android:layout_above="@+id/history_list_bottom"
android:visibility="invisible"
></TextView>



<TextView 
android:id="@+id/history_list_id" 
android:text=""
android:textColor="#000000"
android:textSize="18px"
android:layout_width="fill_parent" 
android:layout_height="wrap_content"
android:layout_marginTop="5px"
android:layout_toRightOf="@+id/history_list_xu"
android:layout_toLeftOf="@+id/history_list_date"
></TextView>


<TextView 
android:id="@+id/history_list_date" 
android:text=""
android:textColor="#000000"
android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:layout_marginTop="5px"
android:layout_alignParentRight="true"
android:gravity="center_horizontal"
></TextView>

<TextView 
android:id="@+id/history_list_eventDesc" 
android:textColor="#000000"
android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:layout_marginTop="5px"
android:layout_toRightOf="@+id/history_list_xu"
android:layout_below="@+id/history_list_id"
android:layout_toLeftOf="@+id/history_list_date"
></TextView>

<TextView 
android:id="@+id/history_list_color" 
android:layout_width="18px" 
android:layout_height="wrap_content"
android:layout_marginTop="8px"
android:layout_marginLeft="2px"
android:background="#00ff00"
></TextView>

<TextView 
android:id="@+id/history_list_bottom" 
android:layout_width="fill_parent" 
android:layout_height="5px"
android:layout_below="@+id/history_list_eventDesc"
></TextView>

</RelativeLayout>
