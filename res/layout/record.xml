<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fafafa"
    >

<ImageView
android:id="@+id/title"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@drawable/title"
></ImageView>
    

<TextView
android:id="@+id/serach_tv_title"
android:text="录音库"
android:textSize="28px"
android:textColor="#FEFEFE"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginTop="6px"
android:layout_centerHorizontal="true"
android:gravity="center"
></TextView>

    <ListView
     	android:id="@+id/record_listview1"
     	android:layout_width="fill_parent"
     	android:layout_height="fill_parent"
     	android:divider="#AAAAAA"
		android:dividerHeight="1px"
		android:cacheColorHint="#00000000"
		android:layout_above="@+id/record_button1"
		android:layout_marginBottom="3px"
		android:layout_below="@+id/title"
     ></ListView>
    
    <TextView
    android:id="@+id/record_flag1"
    android:layout_width="0px"
    android:layout_height="0px"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    ></TextView>
    
<TextView
android:id="@+id/call_back"
android:layout_width="fill_parent" 
android:layout_height="52px"
android:layout_alignParentBottom="true"
android:layout_below="@+id/settingpassword_centerflag4"
android:background="#FFFFFF"
></TextView>
    
    
    <Button
    android:id="@+id/record_button1"
    android:text="新录音"
    android:layout_width="73px"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_toLeftOf="@+id/record_button2"
    android:layout_marginRight="6px"
    ></Button>
    
    <Button
    android:id="@+id/record_button2"
    android:text="全选"
    android:layout_width="73px"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_toLeftOf="@+id/record_flag1"
    android:layout_marginRight="3px"
    android:visibility="invisible"
    ></Button>
    
    <Button
    android:id="@+id/record_button3"
    android:text="删除"
    android:layout_width="73px"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_toRightOf="@+id/record_flag1"
    android:layout_marginLeft="3px"
    android:visibility="invisible"
    ></Button>
    
    <Button
    android:id="@+id/record_button4"
    android:text="取消"
    android:layout_width="73px"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_toRightOf="@+id/record_button3"
    android:layout_marginLeft="6px"
    ></Button>
    
    <Button
    android:id="@+id/record_button5"
    android:text="上报选中"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    ></Button>

</RelativeLayout>
