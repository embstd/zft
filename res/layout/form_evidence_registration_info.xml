<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#efefef" >

    <ScrollView
        android:id="@+id/sv0042"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView
                android:id="@+id/form_title_all_4_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/form_title_all_name"
                android:textColor="#111111"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/form_title_4_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/form_title_all_4_2"
                android:gravity="center_horizontal"
                android:text="@string/form_title_4_name"
                android:textColor="#111111"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/evidence_registration_info_1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/form_title_4_2"
                android:gravity="center_vertical"
                android:text="@string/form_evidence_registration_info_1_name"
                android:textColor="#111111" />

            <EditText
                android:id="@+id/evidence_registration_info_1_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/form_title_4_2"
                android:layout_toRightOf="@id/evidence_registration_info_1_name"
                android:textSize="15sp" 
                android:singleLine="true"/>

            <TextView
                android:id="@+id/evidence_registration_info_2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/evidence_registration_info_1_txt"
                android:gravity="center_vertical"
                android:text="@string/form_evidence_registration_info_2_name"
                android:textColor="#111111" />

            <EditText
                android:id="@+id/evidence_registration_info_2_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/evidence_registration_info_1_txt"
                android:layout_toRightOf="@id/evidence_registration_info_2_name"
                android:textSize="15sp" 
                android:singleLine="true"/>

            <TextView
                android:id="@+id/evidence_registration_info_3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/evidence_registration_info_2_txt"
                android:gravity="center_vertical"
                android:text="@string/form_evidence_registration_info_3_name"
                android:textColor="#111111" />

            <EditText
                android:id="@+id/evidence_registration_info_3_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/evidence_registration_info_2_txt"
                android:layout_toRightOf="@id/evidence_registration_info_3_name"
                android:textSize="15sp" 
                android:singleLine="true"/>

            <TextView
                android:id="@+id/evidence_registration_info_4_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/evidence_registration_info_3_txt"
                android:gravity="center_vertical"
                android:text="@string/form_evidence_registration_info_4_name"
                android:textColor="#111111" />

            <EditText
                android:id="@+id/evidence_registration_info_4_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/evidence_registration_info_3_txt"
                android:layout_toRightOf="@id/evidence_registration_info_4_name"
                android:textSize="15sp" 
                android:singleLine="true"/>

            <TextView
                android:id="@+id/evidence_registration_info_5_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/evidence_registration_info_4_txt"
                android:gravity="center_vertical"
                android:text="@string/form_evidence_registration_info_5_name"
                android:textColor="#111111" />

            <EditText
                android:id="@+id/evidence_registration_info_5_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/evidence_registration_info_4_txt"
                android:layout_toRightOf="@id/evidence_registration_info_5_name"
                android:textSize="15sp" 
                android:singleLine="true"/>

            <TextView
                android:id="@+id/evidence_registration_info_6_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/evidence_registration_info_5_txt"
                android:gravity="center_vertical"
                android:text="@string/form_evidence_registration_info_6_name"
                android:textColor="#111111" />

            <EditText
                android:id="@+id/evidence_registration_info_6_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/evidence_registration_info_5_txt"
                android:layout_toRightOf="@id/evidence_registration_info_6_name"
                android:textSize="15sp" 
                android:singleLine="true"
                />
            
            <Button
                android:id="@+id/save_form_evidence_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/evidence_registration_info_6_txt"
                android:text="保存"
                android:textColor="#111111"
                android:textSize="22sp"
                android:layout_marginBottom="125sp" />
            
             <Button
                android:id="@+id/delete_form_evidence_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/evidence_registration_info_6_txt"
                android:text="删除"
                android:textColor="#111111"
                android:textSize="22sp" 
                android:layout_marginBottom="125sp"/>
            
        </RelativeLayout>
        
         </ScrollView>

    <include android:id="@+id/form_bottom"
        layout="@layout/form_bottom_bar"
        android:layout_alignParentBottom="true"
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
   

</RelativeLayout>