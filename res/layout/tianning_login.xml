<RelativeLayout 
xmlns:android="http://schemas.android.com/apk/res/android" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent"
android:tileMode="repeat"
android:background="@drawable/login3"
> 

<TextView
android:id="@+id/login_appname"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
android:layout_marginTop="55sp"
android:textSize="26sp"
android:textColor="#FFFFFF"
android:gravity="center"
></TextView>
	
<TextView
android:id="@+id/login_centerflag1"
android:text="A"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerInParent="true"
android:layout_marginLeft="100sp"
android:layout_marginRight="110sp"
android:layout_marginTop="100sp"
android:visibility="invisible"
></TextView>

<TextView
android:id="@+id/login_centerflag2"
android:text="B"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_toLeftOf="@+id/login_centerflag1"
android:layout_above="@+id/login_centerflag1"
android:visibility="invisible"
></TextView>

<TextView
android:id="@+id/login_centerflag3"
android:text="C"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_toRightOf="@+id/login_centerflag1"
android:layout_above="@+id/login_centerflag1"
android:visibility="invisible"
></TextView>

<TextView
android:id="@+id/login_textview1"
android:text="账号"
android:layout_width="55sp"
android:layout_height="30sp"
android:layout_toRightOf="@+id/login_centerflag2"
android:layout_below="@+id/login_centerflag2"
android:textSize="22sp"
android:textColor="@drawable/black"
android:layout_marginTop="8sp"
></TextView>

<TextView
android:id="@+id/login_textview2"
android:text="密码"
android:layout_width="55sp"
android:layout_height="30sp"
android:layout_below="@+id/login_centerflag2"
android:layout_toRightOf="@+id/login_centerflag2"
android:layout_marginTop="91sp"
android:textSize="22sp"
android:textColor="@drawable/black"
></TextView>

<EditText
android:id="@+id/login_edittext1"
android:layout_width="155sp"
android:layout_height="50sp"
android:textSize="20sp"
android:layout_toLeftOf="@+id/login_centerflag3"
android:layout_below="@+id/login_centerflag2"
android:singleLine="true"

android:maxLength="10"
/>

<EditText
android:id="@+id/login_edittext2"
android:layout_width="155sp"
android:layout_height="50sp"
android:textSize="20sp"
android:password="true"
android:singleLine="true"
android:layout_toLeftOf="@+id/login_centerflag3"
android:layout_below="@+id/login_centerflag2"
android:layout_marginTop="82sp"
/>

<CheckBox 
android:layout_height="50sp" 
android:layout_width="110sp" 
android:text="记住密码" 
android:id="@+id/login_checkbox_remember" 
android:textColor="#333333"
android:layout_below="@+id/login_centerflag2"
android:layout_toRightOf="@+id/login_centerflag2"
android:layout_marginTop="145sp"
></CheckBox>

<CheckBox 
android:layout_height="50sp" 
android:layout_width="110sp" 
android:text="自动登录" 
android:id="@+id/login_checkbox_autolaogin" 
android:layout_below="@+id/login_centerflag2"
android:layout_toLeftOf="@+id/login_centerflag3"
android:layout_marginTop="145sp"
android:textColor="#333333"
></CheckBox>



<Button 
android:text="登录" 
android:id="@+id/login_button_ok" 
android:layout_width="fill_parent"
android:layout_height="50sp" 
android:layout_below="@+id/login_centerflag2"
android:layout_toRightOf="@+id/login_centerflag2"
android:layout_toLeftOf="@+id/login_centerflag3"
android:layout_marginTop="240sp"
/>

<TextView
android:id="@+id/login_textview_version"
android:text="ver"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_alignParentRight="true"
android:layout_alignParentTop="true"
android:textSize="16sp"
android:textColor="@drawable/black"
android:layout_marginTop="6sp"
android:layout_marginRight="15sp"
android:gravity="right"
></TextView>


</RelativeLayout> 