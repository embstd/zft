<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
     android:background="#fafafa"
  >
    
     
<ImageView
android:id="@+id/ztclist_title"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@drawable/title"
></ImageView>
    

<TextView
android:id="@+id/ztclist_tv_title"
android:text="查询结果"
android:textSize="38px"
android:textColor="#FEFEFE"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginTop="4dip"
android:layout_centerHorizontal="true"
android:gravity="center"
></TextView>

<ListView
android:id="@+id/ztc_listview"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:divider="#AAAAAA"
android:dividerHeight="1px"
android:cacheColorHint="#00000000"
android:layout_below="@+id/ztclist_title"
android:layout_above="@+id/ztc_list_call_back"
></ListView>


<TextView
android:id="@+id/ztc_list_call_back"
android:layout_width="fill_parent" 
android:layout_height="52px"
android:layout_alignParentBottom="true"
android:background="#FFFFFF"

></TextView>


<Button
android:id="@+id/ztc_lists_back"
android:layout_width="120dip" 
android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
android:layout_alignParentRight="true"
android:layout_marginRight="2px"
android:layout_marginTop="3px"
android:text="返回" 
></Button>
</RelativeLayout>
