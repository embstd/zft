<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#efefef" >

    <ScrollView
        android:id="@+id/sv002"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/form_title_all_2_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/form_title_all_name"
                android:textColor="#111111"
                android:textSize="18sp"
                android:paddingTop="20dp" />

            <TextView
                android:id="@+id/form_title_2_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/form_title_all_2_2"
                android:gravity="center_horizontal"
                android:text="@string/form_title_2_name"
                android:textColor="#111111"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/record_conditions_1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/form_title_2_2"
                android:gravity="center_vertical"
                android:text="@string/form_record_conditions_1_name"
                android:textColor="#111111" />
            

            <EditText
                android:id="@+id/record_conditions_1_name_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/record_conditions_1_name"
                android:textSize="15sp" 
                android:height="300dip"
                android:maxLines="10"
                />

            <TextView
                android:id="@+id/record_conditions_2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/record_conditions_1_name_txt"
                android:gravity="center_vertical"
                android:text="@string/form_record_conditions_2_name"
                android:textColor="#111111" />

            <EditText
                android:id="@+id/record_conditions_2_name_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/record_conditions_1_name_txt"
                android:layout_toRightOf="@id/record_conditions_2_name"
                android:textSize="15sp" 
                 android:singleLine="true"/>

            <TextView
                android:id="@+id/record_conditions_3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/record_conditions_2_name_txt"
                android:gravity="center_vertical"
                android:text="@string/form_record_conditions_3_name"
                android:textColor="#111111" />

            <EditText
                android:id="@+id/record_conditions_3_name_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/record_conditions_2_name_txt"
                android:layout_toRightOf="@id/record_conditions_3_name"
                android:textSize="15sp" 
                 android:singleLine="true"/>

            <TextView
                android:id="@+id/record_conditions_4_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/record_conditions_3_name_txt"
                android:gravity="center_vertical"
                android:text="@string/form_record_conditions_4_name"
                android:textColor="#111111" />

            <EditText
                android:id="@+id/record_conditions_4_name_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/record_conditions_3_name_txt"
                android:layout_toRightOf="@id/record_conditions_4_name"
                android:textSize="15sp" 
                 android:singleLine="true"/>

            <TextView
                android:id="@+id/record_conditions_5_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/record_conditions_4_name_txt"
                android:gravity="center_vertical"
                android:text="@string/form_record_conditions_5_name"
                android:textColor="#111111" />

            <EditText
                android:id="@+id/record_conditions_5_name_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/record_conditions_4_name_txt"
                android:layout_toRightOf="@id/record_conditions_5_name"
                android:textSize="15sp" 
                android:layout_marginBottom="65dp"
                 android:singleLine="true"/>
            
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@id/record_conditions_5_name_txt">
                
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

    
    <include android:id="@+id/form_bottom"
        layout="@layout/form_bottom_bar"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/> 
    
    

</RelativeLayout>