<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true" > 
	　　<shape>
			<gradient
			android:startColor="#a0d040" 
			android:endColor="#a0d040" 
			android:angle="270" /> 

			<stroke 
			android:width="2dp" 
			android:color="#dcdcdc" /> 

			<corners 
			android:radius="2dp" /> 

			<padding 
			android:left="10dp"
			android:top="10dp"
			android:right="10dp"
			android:bottom="10dp" />
	　　</shape>

	</item>

　　<item android:state_focused="true" > 
		<shape>
			<gradient
			android:startColor="#ffc2b7"
			android:endColor="#ffc2b7"
			android:angle="270" />

			<stroke
			android:width="2dp"
			android:color="#dcdcdc" />

			<corners android:radius="2dp" />

			<padding
			android:left="10dp"
			android:top="10dp"
			android:right="10dp"
			android:bottom="10dp" />
		</shape>
　　</item>

	<item> 
	　　<shape>
			<gradient
			android:startColor="#f0f0f0"
			android:endColor="#d0d0d0"
			android:angle="270" />

			<stroke 
			android:width="2dp"
			android:color="#fad3cf" />

			<corners
			android:radius="2dp" />

			<padding
			android:left="10dp"
			android:top="10dp"
			android:right="10dp"
			android:bottom="10dp" />
		</shape>
　　</item>
</selector>
